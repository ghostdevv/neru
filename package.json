{
    "name": "neru-monorepo",
    "private": true,
    "license": "MIT",
    "devDependencies": {
        "@changesets/cli": "^2.24.3",
        "@svitejs/changesets-changelog-github-compact": "^0.1.1",
        "@types/node": "^18.7.8",
        "tsm": "^2.2.2",
        "tsup": "^6.2.2",
        "typescript": "^4.7.4",
        "vitepress": "1.0.0-alpha.9"
    },
    "scripts": {
        "dev": "pnpm --parallel -r dev",
        "dev-build": "pnpm --parallel -r build --watch",
        "dev-dev": "pnpm --filter dev -r dev",
        "build": "pnpm -r build",
        "test": "pnpm -r test",
        "release": "changeset publish",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs"
    },
    "homepage": "https://github.com/ghostdevv/neru",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ghostdevv/neru"
    },
    "bugs": {
        "url": "https://github.com/ghostdevv/neru"
    },
    "packageManager": "pnpm@7.0.0",
    "engines": {
        "pnpm": "^7.0.0",
        "npm": "forbidden, use pnpm",
        "node": ">= 14"
    },
    "pnpm": {
        "overrides": {
            "neru": "workspace:*"
        }
    }
}
