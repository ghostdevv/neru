{
    "name": "neru-monorepo",
    "private": true,
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^16.11.9",
        "tsm": "^2.1.4",
        "tsup": "^5.8.0",
        "typescript": "^4.5.2"
    },
    "scripts": {
        "dev": "pnpm -r dev --parallel",
        "dev-build": "pnpm dev --parallel --filter \\!dev",
        "dev-dev": "pnpm dev --filter dev",
        "build": "pnpm -r build",
        "publish": "pnpm build && pnpm publish -r --access public",
        "test": "pnpm -r test"
    },
    "homepage": "https://github.com/NeruJS/neru",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/NeruJS/neru"
    },
    "bugs": {
        "url": "https://github.com/NeruJS/neru"
    },
    "packageManager": "pnpm@6.20.3",
    "engines": {
        "pnpm": "^6.7.0",
        "npm": "forbidden, use pnpm",
        "node": ">= 12"
    },
    "pnpm": {
        "overrides": {
            "neru": "workspace:*"
        }
    }
}
