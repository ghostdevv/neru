{
    "name": "neru-monorepo",
    "private": true,
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^16.11.7",
        "tsup": "^5.6.0",
        "typescript": "^4.4.4"
    },
    "scripts": {
        "dev": "pnpm -r dev --parallel",
        "dev-build": "pnpm dev --parallel --filter \\!dev",
        "dev-dev": "pnpm dev --filter dev",
        "build": "pnpm -r build"
    },
    "homepage": "https://github.com/NeruJS/neru",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/NeruJS/neru"
    },
    "bugs": {
        "url": "https://github.com/NeruJS/neru"
    },
    "packageManager": "pnpm",
    "engines": {
        "pnpm": "^6.7.0",
        "npm": "forbidden, use pnpm",
        "node": ">= 12"
    },
    "pnpm": {
        "overrides": {
            "neru": "workspace:*"
        }
    }
}
